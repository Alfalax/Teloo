# Realtime Gateway - Staging Environment

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_POOL_SIZE=10

# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=RS256

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_HEARTBEAT_TIMEOUT=60
WS_MAX_CONNECTIONS_PER_USER=5

# Event Channels
REDIS_EVENTS_CHANNEL=teloo:events
REDIS_NOTIFICATIONS_CHANNEL=teloo:notifications

# Application Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO
API_V1_STR=/v1

# CORS Configuration
CORS_ORIGINS=["https://staging-admin.teloo.com","https://staging-advisor.teloo.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=200
MAX_CONNECTIONS_PER_IP=10

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
ENABLE_METRICS=true

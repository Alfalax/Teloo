# Files Service - Staging Environment

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_BUCKET_NAME=teloo-files-staging
MINIO_SECURE=false

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_POOL_SIZE=10

# File Upload Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls,.pdf,.jpg,.jpeg,.png
ENABLE_ANTIVIRUS_SCAN=false

# Application Configuration
ENVIRONMENT=staging
DEBUG=false
LOG_LEVEL=INFO
API_V1_STR=/v1

# CORS Configuration
CORS_ORIGINS=["https://staging-admin.teloo.com","https://staging-advisor.teloo.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_UPLOADS_PER_HOUR=50

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
ENABLE_METRICS=true

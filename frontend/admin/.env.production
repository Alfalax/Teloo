# Admin Frontend - Production Environment

# API Configuration
VITE_API_URL=https://api.teloo.cloud
VITE_ANALYTICS_API_URL=https://api.teloo.cloud/analytics
VITE_REALTIME_URL=https://api.teloo.cloud/realtime
VITE_FILES_URL=https://api.teloo.cloud/files

# Application Configuration
VITE_APP_NAME=TeLOO Admin
VITE_APP_VERSION=3.0.0
VITE_ENVIRONMENT=production

# Authentication Configuration
VITE_JWT_STORAGE_KEY=teloo_admin_token
VITE_REFRESH_TOKEN_KEY=teloo_admin_refresh
VITE_SESSION_TIMEOUT_MINUTES=15

# Theme Configuration
VITE_THEME=amber-minimal
VITE_DEFAULT_LOCALE=es
VITE_SUPPORTED_LOCALES=es,en

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# Dashboard Configuration
VITE_DASHBOARD_REFRESH_INTERVAL=30000
VITE_KPI_REFRESH_INTERVAL=60000
VITE_CHART_ANIMATION_DURATION=750

# Table Configuration
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=5
VITE_ALLOWED_FILE_TYPES=.xlsx,.xls

# Development Configuration
VITE_DEBUG=false
VITE_LOG_LEVEL=error
VITE_MOCK_API=false

# Performance Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true

# Monitoring
VITE_SENTRY_DSN=${VITE_SENTRY_DSN}
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Files Service - Production Environment

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_BUCKET_NAME=teloo-files-production
MINIO_SECURE=true

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_POOL_SIZE=20

# File Upload Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls,.pdf,.jpg,.jpeg,.png
ENABLE_ANTIVIRUS_SCAN=true
CLAMAV_HOST=clamav
CLAMAV_PORT=3310

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
API_V1_STR=/v1

# CORS Configuration
CORS_ORIGINS=["https://admin.teloo.com","https://advisor.teloo.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=200
MAX_UPLOADS_PER_HOUR=100

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
ENABLE_METRICS=true
ENABLE_TRACING=true

# Realtime Gateway - Production Environment

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_POOL_SIZE=20

# JWT Configuration
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=RS256

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_HEARTBEAT_TIMEOUT=60
WS_MAX_CONNECTIONS_PER_USER=5

# Event Channels
REDIS_EVENTS_CHANNEL=teloo:events
REDIS_NOTIFICATIONS_CHANNEL=teloo:notifications

# Application Configuration
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
API_V1_STR=/v1

# CORS Configuration
CORS_ORIGINS=["https://admin.teloo.com","https://advisor.teloo.com"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=500
MAX_CONNECTIONS_PER_IP=20

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
ENABLE_METRICS=true
ENABLE_TRACING=true

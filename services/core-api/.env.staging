# TeLOO V3 Core API - Staging Environment

# Environment
ENVIRONMENT=staging

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_NAME=${POSTGRES_DB:-teloo_v3_staging}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB:-teloo_v3_staging}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# JWT Configuration
# IMPORTANT: Use Docker secrets in production
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# WhatsApp API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=${WHATSAPP_ACCESS_TOKEN}
WHATSAPP_PHONE_NUMBER_ID=${WHATSAPP_PHONE_NUMBER_ID}
WHATSAPP_WEBHOOK_VERIFY_TOKEN=${WHATSAPP_WEBHOOK_VERIFY_TOKEN}

# LLM API Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}
DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_BUCKET_NAME=teloo-files-staging
MINIO_SECURE=false

# System Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls
TIMEZONE=America/Bogota

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Service-to-Service Authentication
AGENT_IA_API_KEY=${AGENT_IA_API_KEY}
ANALYTICS_API_KEY=${ANALYTICS_API_KEY}

# CORS Configuration
BACKEND_CORS_ORIGINS=["https://staging-admin.teloo.com","https://staging-advisor.teloo.com"]

# Performance Configuration
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
REDIS_POOL_SIZE=10

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=${SENTRY_DSN}

# TeLOO V3 Core API - Production Environment

# Environment
ENVIRONMENT=production

# Database Configuration
# IMPORTANT: Use Docker secrets for sensitive values
DB_HOST=postgres
DB_PORT=5432
DB_USER=${POSTGRES_USER}
DB_PASSWORD=${POSTGRES_PASSWORD}
DB_NAME=${POSTGRES_DB:-teloo_v3_production}
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB:-teloo_v3_production}

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# JWT Configuration
# CRITICAL: Must use Docker secrets in production
JWT_SECRET_KEY=${JWT_SECRET_KEY}
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# WhatsApp API Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_ACCESS_TOKEN=${WHATSAPP_ACCESS_TOKEN}
WHATSAPP_PHONE_NUMBER_ID=${WHATSAPP_PHONE_NUMBER_ID}
WHATSAPP_WEBHOOK_VERIFY_TOKEN=${WHATSAPP_WEBHOOK_VERIFY_TOKEN}

# LLM API Configuration
OPENAI_API_KEY=${OPENAI_API_KEY}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
GEMINI_API_KEY=${GEMINI_API_KEY}
DEEPSEEK_API_KEY=${DEEPSEEK_API_KEY}

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=${MINIO_ACCESS_KEY}
MINIO_SECRET_KEY=${MINIO_SECRET_KEY}
MINIO_BUCKET_NAME=teloo-files-production
MINIO_SECURE=true

# System Configuration
MAX_FILE_SIZE_MB=5
ALLOWED_FILE_EXTENSIONS=.xlsx,.xls
TIMEZONE=America/Bogota

# Logging
LOG_LEVEL=WARNING
LOG_FORMAT=json

# Service-to-Service Authentication
AGENT_IA_API_KEY=${AGENT_IA_API_KEY}
ANALYTICS_API_KEY=${ANALYTICS_API_KEY}

# CORS Configuration
BACKEND_CORS_ORIGINS=["https://admin.teloo.com","https://advisor.teloo.com"]

# Performance Configuration
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100
REDIS_POOL_SIZE=20

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=true
SENTRY_DSN=${SENTRY_DSN}

# Security
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=100
ENABLE_REQUEST_VALIDATION=true

# Admin Frontend Environment Variables

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_REALTIME_URL=http://localhost:8003
VITE_FILES_URL=http://localhost:8004

# Application Configuration
VITE_APP_NAME=TeLOO Admin
VITE_APP_VERSION=3.0.0
VITE_ENVIRONMENT=development

# Authentication Configuration
VITE_JWT_STORAGE_KEY=teloo_admin_token
VITE_REFRESH_TOKEN_KEY=teloo_admin_refresh
VITE_SESSION_TIMEOUT_MINUTES=15

# Theme Configuration
VITE_THEME=amber-minimal
VITE_DEFAULT_LOCALE=es
VITE_SUPPORTED_LOCALES=es,en

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_REALTIME=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true

# Dashboard Configuration
VITE_DASHBOARD_REFRESH_INTERVAL=30000
VITE_KPI_REFRESH_INTERVAL=60000
VITE_CHART_ANIMATION_DURATION=750

# Table Configuration
VITE_DEFAULT_PAGE_SIZE=25
VITE_MAX_PAGE_SIZE=100

# File Upload Configuration
VITE_MAX_FILE_SIZE_MB=5
VITE_ALLOWED_FILE_TYPES=.xlsx,.xls

# Development Configuration
VITE_DEBUG=true
VITE_LOG_LEVEL=debug
VITE_MOCK_API=false

# Performance Configuration
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false